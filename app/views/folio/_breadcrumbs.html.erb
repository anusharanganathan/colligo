    # breadcrumb_params[:f]['authors_all_facet'] = @manuscript['authors_all_display'] unless @manuscript['authors_all_display'].blank?
  %>
  <%= render_breadcrumb_constraints_filters(breadcrumb_params) %>
  <span> > </span>
<% end %>
