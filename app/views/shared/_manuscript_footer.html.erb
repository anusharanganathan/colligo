<div class="row">
  <div class="col-md-9">
    <!-- related annotations -->
    <% a_class = 'noresult' %>
    <% if @related_annotations.has_key?( document['title_display']) && @related_annotations[document['title_display']] > 0 %>
        <% a_class = 'result' %>
    <% end %>
    <a href="<%="#{path_for_facet('manuscript_facet', document['title_display'])}&search_field=annotations"%>" class="btn btn-sm <%=a_class%>">
      <span class="glyphicon glyphicon-tag" aria-hidden="true"></span> Annotations
    </a>
    <!-- related transcriptions -->
    <% t_class = 'noresult' %>
    <% if @related_transcriptions.has_key?( document['title_display']) && @related_transcriptions[document['title_display']] > 0 %>
        <% t_class = 'result' %>
    <% end %>
    <a href="<%="#{path_for_facet('manuscript_facet', document['title_display'])}&search_field=transcriptions"%>" class="btn btn-sm <%=t_class%>">
      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Transcriptions
    </a>
  </div>
  <div class="col-md-3 pull-right">
    <!-- bookmark control -->
    <%= render partial: 'shared/bookmark_control', locals: {:document => document}  %>
  </div>
</div>