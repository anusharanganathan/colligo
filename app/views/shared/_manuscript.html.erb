<div class="panel panel-content search-panel">
  <div class="panel-body">

    <div class="media">
      <div class="media-left">
        <% unless document['img_info'].blank? %>
          <%= image_tag(document['img_info'].first, class: 'media-object results-thumbnail') %>
        <% end %>&nbsp;
      </div>
      <div class="media-body">
        <!-- IIIF manifest -->
        <% if show_manifest == true && !document['manifest_urls'].blank? %>
          <span class="pull-right iiif-logo">
            <a href="<%=document['manifest_urls'].first%>"><%= image_tag("iiif-logo.png") %></a>
          </span>
        <% end %>
        <!-- metadata -->
        <h4 class="media-heading"><a href="/manuscript/<%=document['druid']%>"><%= document['title_display'] %></a></h4>
        <% unless document['authors_all_display'].blank? %>
          <p><strong><%= raw document['authors_all_display'].join("<br/>") %></strong></p>
        <% end %>
        <% unless document['abstract_display'].blank? %>
          <p><%= truncate(document['abstract_display'], length: 150) %></p>
        <% end %>
      </div>
    </div>
  </div>
  <% if show_footer == true %>
    <div class="panel-footer results-footer">
      <div class="row">
        <div class="col-md-9">
          <!-- related annotations -->
          <% a_class = "noresult" %>
          <% if @related_annotations.has_key?( document['title_display']) && @related_annotations[document['title_display']] > 0 %>
            <% a_class = "result" %>
          <% end %>
          <a href="<%="#{path_for_facet('manuscript_facet', document['title_display'])}&search_field=annotations"%>" class="btn btn-sm <%=a_class%>">
            <span class="glyphicon glyphicon-tag" aria-hidden="true"></span> Annotations
          </a>
          <!-- related transcriptions -->
          <% t_class = "noresult" %>
          <% if @related_transcriptions.has_key?( document['title_display']) && @related_transcriptions[document['title_display']] > 0 %>
            <% t_class = "result" %>
          <% end %>
          <a href="<%="#{path_for_facet('manuscript_facet', document['title_display'])}&search_field=transcriptions"%>" class="btn btn-sm <%=t_class%>">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Transcriptions
          </a>
        </div>
        <div class="col-md-3 pull-right">
          <!-- bookmark control -->
          <%= render partial: 'shared/bookmark_control', locals: {:document => document}  %>
        </div>
      </div>
    </div>
  <% end %>
</div>

